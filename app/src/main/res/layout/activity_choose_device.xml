<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Color -->
            <RelativeLayout
                android:id="@+id/color_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/layout_x_80"
                    android:layout_height="@dimen/layout_y_105"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/icon_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Color"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_selected_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/select_device2"
                    android:visibility="gone" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray5"
                android:visibility="gone" />

            <!-- Fusion+ -->
            <RelativeLayout
                android:id="@+id/fusion_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/layout_x_80"
                    android:layout_height="@dimen/layout_y_105"
                    android:layout_marginStart="10dp"
                    android:background="@mipmap/fusion_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Fusion+"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_selected_fusion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/select_device2"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray5" />

            <!-- Her -->
            <RelativeLayout
                android:id="@+id/her_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/layout_x_80"
                    android:layout_height="@dimen/layout_y_105"
                    android:layout_marginStart="10dp"
                    android:background="@mipmap/her_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Her"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_selected_her"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/select_device2"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray5" />

            <!-- Young -->
            <RelativeLayout
                android:id="@+id/young_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/layout_x_80"
                    android:layout_height="@dimen/layout_y_105"
                    android:layout_marginStart="10dp"
                    android:background="@mipmap/icon_young" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Young"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_selected_young"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/select_device2"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray5"
                android:visibility="visible" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>