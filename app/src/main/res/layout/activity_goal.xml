<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_step"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/layout_y_70">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:paddingLeft="10dip"
                android:text="@string/goal_steps"
                android:textColor="@android:color/black"
                android:textSize="18dip"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dip"
                android:text=""
                android:textColor="@color/header_bg_color"
                android:textSize="16dip"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@mipmap/more" />

        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="#cccccc" />

        <RelativeLayout
            android:id="@+id/rl_active_minutes"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/layout_y_70"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:paddingLeft="10dip"
                android:text="@string/goal_active_minutes"
                android:textColor="@android:color/black"
                android:textSize="18dip"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_active_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dip"
                android:text=""
                android:textColor="@color/header_bg_color"
                android:textSize="16dip"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@mipmap/more" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_distance"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/layout_y_70">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:paddingLeft="10dip"
                android:text="@string/goal_distance"
                android:textColor="@android:color/black"
                android:textSize="18dip"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dip"
                android:text=""
                android:textColor="@color/header_bg_color"
                android:textSize="16dip"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@mipmap/more" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="#cccccc" />

        <RelativeLayout
            android:id="@+id/rl_calories"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/layout_y_70">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:paddingLeft="10dip"
                android:text="@string/goal_calories"
                android:textColor="@android:color/black"
                android:textSize="18dip"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dip"
                android:text=""
                android:textColor="@color/header_bg_color"
                android:textSize="16dip"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@mipmap/more" />

        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="#cccccc" />

        <RelativeLayout
            android:id="@+id/rl_sleep"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/layout_y_70"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:paddingLeft="10dip"
                android:text="@string/goal_sleep"
                android:textColor="@android:color/black"
                android:textSize="18dip"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_sleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dip"
                android:text=""
                android:textColor="@color/header_bg_color"
                android:textSize="16dip"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@mipmap/more" />

        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="#cccccc" />

    </LinearLayout>


</LinearLayout>