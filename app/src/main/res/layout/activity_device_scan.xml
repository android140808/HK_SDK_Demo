<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--<TextView-->
        <!--android:id="@+id/searching_for"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="30dp"-->
        <!--android:text="@string/searching_for" />-->
        <ImageView
            android:id="@+id/show_device_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@mipmap/fusion_small" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/layout_y_32"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/frame_shape_1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/search"
                    android:textColor="#FFFFFF" />

                <ListView
                    android:id="@+id/lv_devices"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/frame_shape"
                    android:divider="@android:color/white"
                    android:dividerHeight="1dp"
                    android:gravity="center_vertical"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none" />

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_y_34"
            android:gravity="center_horizontal"
            android:text="@string/select_the_device"
            android:textSize="@dimen/layout_x_24" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_marginBottom="@dimen/layout_y_30"
            android:layout_marginTop="@dimen/layout_y_30"
            android:background="@mipmap/logout"
            android:text="@string/search"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
