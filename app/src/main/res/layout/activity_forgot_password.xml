<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_white"
    android:orientation="vertical"
    android:padding="30dp">


    <cn.appscomm.l38t.UI.edit.AutoDelEditText
        android:id="@+id/et_reset_email"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginTop="100dip"
        android:background="@drawable/edit_white_bg"
        android:drawableLeft="@mipmap/mail_ico"
        android:drawablePadding="5dp"
        android:hint="@string/reg_email"
        android:singleLine="true"
        android:text=""
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_reset_pwd"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginTop="70dp"
        android:background="@mipmap/btn_ok"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>